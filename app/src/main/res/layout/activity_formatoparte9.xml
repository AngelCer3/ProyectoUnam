<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_curvo"
    tools:context=".Formatoparte9Activity">

    <!-- Logos -->
    <ImageView
        android:id="@+id/logo_izquierdo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_izquierdo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <ImageView
        android:id="@+id/logo_derecho"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_derecho"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"/>

    <!-- Título -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SECCIÓN VIII: Información Laboral del Cónyuge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_izquierdo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor de datos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSiguiente">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Información Laboral del Cónyuge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos Laborales del Cónyuge"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/conyuge_activo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cónyuge Activo (Sí/No)"/>

                <EditText
                    android:id="@+id/conyuge_ocupacion_actual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ocupación Actual del Cónyuge"/>

                <EditText
                    android:id="@+id/institucion_trabajo_conyuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institución donde Trabaja el Cónyuge"/>

                <EditText
                    android:id="@+id/conyuge_actividad_remunerada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Actividad Remunerada del Cónyuge"/>

                <EditText
                    android:id="@+id/conyuge_contrato_laboral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de Contrato Laboral del Cónyuge"/>

                <EditText
                    android:id="@+id/conyuge_ingreso_mensual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingreso Mensual del Cónyuge"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/conyuge_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Empresa donde Trabaja el Cónyuge"/>

                <EditText
                    android:id="@+id/conyuge_antiguedad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Antigüedad en su Empresa Actual"/>

                <EditText
                    android:id="@+id/comprobante_ingreso_conyuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cuenta con Comprobante de Ingresos (Sí/No)"/>

                <EditText
                    android:id="@+id/institucion_cotizacion_conyuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institución de Cotización del Cónyuge"/>

                <EditText
                    android:id="@+id/ingresos_conceptos_conyuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Conceptos de Ingreso del Cónyuge"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:backgroundTint="@color/azul_medio"
        android:textColor="@color/blanco"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
