<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_curvo"
    tools:context=".SinConexion.Formatoparte5SinConexion">

    <ImageView
        android:id="@+id/logo_izquierdo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_izquierdo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <ImageView
        android:id="@+id/logo_derecho"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_derecho"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SECCIÓN IV - Información de Reestructuración"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_izquierdo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CardView con ScrollView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campos con etiquetas y EditText -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivo"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/reestructura_motivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Documento"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_documento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo Documento"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_tipo_documento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solicitante es Acreditado"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_solicitante_es_acred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Solicitante"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_solicitante_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parentesco"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_parentesco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivo Personal"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_motivo_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sexo"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_sexo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_fecha_nacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edad"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lugar de Nacimiento"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_lugar_nacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grado de Estudios"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_grado_estudios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conocimiento de Computación"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_conocimiento_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discapacidad"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_discapacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dictamen"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_dictamen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Institución Dictamen"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_institucion_dictamen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha Dictamen"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_fecha_dictamen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Porcentaje Discapacidad"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_porcentaje_discapacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado Civil"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_estado_civil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha Estado Civil"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_fecha_estado_civil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exesposo Aportación"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_exesposo_aportacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exesposo Monto"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_exesposo_monto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Régimen Conyugal"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_regimen_conyugal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vive con Cónyuge"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_vive_con_conyuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha no Convive"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
                <EditText
                    android:id="@+id/reestructura_fecha_no_convive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />

                <!-- Botones abajo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:padding="12dp"
                        android:text="Guardar Datos"
                        android:textColor="@color/blanco"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnSiguiente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/azul_oscuro"
                        android:padding="12dp"
                        android:text="Siguiente"
                        android:textColor="@color/blanco"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>