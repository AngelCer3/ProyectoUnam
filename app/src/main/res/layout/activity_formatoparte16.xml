<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_curvo"
    tools:context=".Formatoparte16Activity">

    <!-- Logos -->
    <ImageView
        android:id="@+id/logo_izquierdo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_izquierdo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <ImageView
        android:id="@+id/logo_derecho"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_derecho"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"/>

    <!-- Título Sección XV: Vivienda -->
    <TextView
        android:id="@+id/titulo_xv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SECCIÓN XV: Vivienda"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_izquierdo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor de datos SECCIÓN XV -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_vivienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_xv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vivienda"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <!-- Campos de datos SECCIÓN XV -->
                <EditText
                    android:id="@+id/vivienda_numero_habitaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de Habitaciones"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/vivienda_tipo_piso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de Piso"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/vivienda_tipo_piso_otro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de Piso (Otro)"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/vivienda_tipo_techo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de Techo"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/viviendo_cuenta_bano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="¿Cuenta con Baño?"
                    android:inputType="text"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Título Sección XVII: Observaciones -->
    <TextView
        android:id="@+id/titulo_xvii"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SECCIÓN XVII: Observaciones"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_vivienda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor de datos SECCIÓN XVII -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_observaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_xvii"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observaciones"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <!-- Campos de datos SECCIÓN XVII -->
                <EditText
                    android:id="@+id/observaciones_entrevistador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observaciones del Entrevistador"
                    android:inputType="text"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:backgroundTint="@color/azul_medio"
        android:textColor="@color/blanco"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
